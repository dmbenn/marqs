<div class="container">
  <div class="header">
    <h2><%= @bookmark.url %></h2>
  </div>
</div>
<div class="container">
  <%= form_for [@topic, @bookmark] do |f| %>
      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-control', placeholder: @bookmark.url %>
      </div>
      <div class="form-group">
           <%= f.submit "Save", class: 'btn btn-success btn-large' %>
      </div>
  <% end %>
</div>