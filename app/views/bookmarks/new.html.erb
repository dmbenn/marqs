<div class="container">
  <div class="header">
    <h2>New Bookmark</h2>
  </div>
</div>
<div class="container">
  <%= form_for [@topic, @bookmark] do |f| %>
    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url, class: 'form-control', placeholder: "Enter url" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save Bookmark", class: 'btn btn-success btn-lg' %>
    </div>
  <% end %>
</div>